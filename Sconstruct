import sys

env = Environment()

libs = [
    'sfml-graphics',
    'sfml-system',
    'sfml-audio',
    'sfml-window',
    'c++experimental'
]
if sys.platform != 'darwin':
    libs.append('GL')

main = env.Program(
    'main',
    Glob('src/*.cc'),
    LIBS=libs,
    FRAMEWORKS=['OpenGl'],
    CCFLAGS=['-std=c++17']
)

Default(main)
