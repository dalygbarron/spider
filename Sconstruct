import sys


libs = [
    'sfml-graphics',
    'sfml-system',
    'sfml-audio',
    'sfml-window'
]
cflags = [
    '-std=c++17',
    '-fdiagnostics-color=always'
]

if sys.platform != 'darwin':
    libs.append('GL')
else:
    cflags.append('-mmacosx-version-min=10.15')
    cflags.append('-stdlib=libc++')

mainSources = Glob('src/main/*.cc')
testSources = Glob('src/test/*.cc')

env = Environment(
    LIBS=libs,
    FRAMEWORKS=['OpenGl'],
    CXXFLAGS=cflags
)

main = env.Program('main', mainSources + ['src/main.cc'])
test = env.Program('test', mainSources + testSources + ['src/catch.cc'])

Default(main)
